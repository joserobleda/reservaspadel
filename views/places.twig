<ul class="row">
    {% for place in places %}
        <li class="large-6 columns">
            <div class="row collapse place">
                <div class="small-6 large-8 columns">
                    <div class="row title">
                        <div class="columns">
                            {{ place.name }}
                        </div>
                    </div>
                   
                    <div class="row spacer">
                        <div class="columns">
                            <span class="info">
                                {% if place.address %}
                                    {{ place.address }}
                                {% else %}
                                    
                                {% endif %}
                            </span>
                        </div>
                    </div>

                    <div class="row spacer">
                        <div class="columns">
                            <span class="info">
                                {% if place.price.range %}
                                    Precio: {{ place.price.range }}
                                {% else %}
                                    Precio: No info
                                {% endif %}
                            </span>
                        </div>
                    </div>
                    
                    <div class="row spacer">
                        <div class="columns">
                            <span class="info">
                                Tlf: 
                                {% if place.phones|first %}
                                    {{ place.phones|first }}
                                {% else %} 
                                    No info
                                {% endif %}
                            </span>
                        </div>
                    </div>
                    
                    <div class="row spacer">
                        <div class="columns">
                            <span class="info">
                                {% if place.web %}
                                     <a href="{{ place.web }}" target="_blank">Ir a la web</a></span>
                                {% else %}
                                    No web
                                {% endif %}
                            </span>
                        </div>
                    </div>
                </div>

                <div class="small-6 large-4 columns map">
                    <div class="row info">
                        <div class="columns">
                            Está solo a <strong>{{ place.distance.readable }} {{ place.distance.unit }}</strong>
                        </div>
                    </div>
                    <div class="row info spacer">
                        <div class="columns">
                            <a target="_BLANK" href="http://maps.google.com/?q={{place.address|url_encode}}%20{{city|url_encode}}"><img src="http://maps.googleapis.com/maps/api/staticmap?center={{place.address|url_encode}}%20{{city|url_encode}}&key=AIzaSyAmbXq8KeJgDXoUTdpCyr7K-n3mrKBpPMg&sensor=false&size=128x128&zoom=13&markers={{place.address|url_encode}}%20{{city|url_encode}}" height="128" width="128" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    {% else %}
        <li>
           <span class="title">No hay pistas en tu ciudad, prueba con otra búsqueda.</span>
        </li>
    {% endif %}
</ul>  

